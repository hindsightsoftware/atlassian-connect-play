@(pluginKey: String = com.atlassian.plugin.remotable.play.Ap3.PLUGIN_KEY, pluginName: String = com.atlassian.plugin.remotable.play.Ap3.PLUGIN_NAME)(pluginInfo: Xml)(modules: Xml)

<atlassian-plugin key="@com.atlassian.plugin.remotable.play.Ap3.PLUGIN_KEY" name="@com.atlassian.plugin.remotable.play.Ap3.PLUGIN_NAME" plugins-version="2">
    @pluginInfo

    <remote-plugin-container key="_container" display-url="@com.atlassian.plugin.remotable.play.Ap3.baseUrl.get()">
        <oauth>
            <public-key>@com.atlassian.plugin.remotable.play.Ap3.publicKey.get()</public-key>
        </oauth>
    </remote-plugin-container>

    <webhook key="_registration" event="remote_plugin_enabled" url="@com.atlassian.plugin.remotable.play.controllers.routes.Ap3Controller.registration()"/>

    @modules
</atlassian-plugin>