@(pluginKey: String = com.atlassian.connect.play.java.AC.PLUGIN_KEY, pluginName: String = com.atlassian.connect.play.java.AC.PLUGIN_NAME)(pluginInfo: Xml)(modules: Xml)

<atlassian-plugin key="@com.atlassian.connect.play.java.AC.PLUGIN_KEY" name="@com.atlassian.connect.play.java.AC.PLUGIN_NAME" plugins-version="2">
    @pluginInfo

    <remote-plugin-container key="_container" display-url="@com.atlassian.connect.play.java.AC.baseUrl.get()">
        <oauth>
            <public-key>@com.atlassian.connect.play.java.AC.publicKey.get()</public-key>
        </oauth>
    </remote-plugin-container>

    <webhook key="_registration" event="remote_plugin_enabled" url="@com.atlassian.connect.play.java.controllers.routes.AcController.registration()"/>

    @modules
</atlassian-plugin>